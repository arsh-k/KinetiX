@kernel void refCp(@restrict dfloat* n)
{
  for(int id = 0; id < 1; ++id; @tile(p_BLOCKSIZE,@outer,@inner)) {
    if(id == 0) {
        n[0] = nekrk_cpRef;
    }
  }
}

